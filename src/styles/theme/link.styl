// --------------------------------------------------
// Link
// --------------------------------------------------

.t-link {
    @extends $reset-link;
	
	font-size: $font-size-lg;
    text-decoration none;
}

.t-link--primary {
	@extends .t-link;
	
	opacity 1
	transform translateZ(0)
	transition .45s $ease-out-quart
	
	&:hover {
		opacity 0.8
	}
}

.t-link--primary__dash {
	width  40px
	height 2px
	
	transform-origin 0 0
	transform scaleX(1) translateZ(0)
	transition .45s $ease-out-quart

	.t-link--primary:hover & {
		transform scaleX(1.4) translateZ(0)
	}
}

.t-link--primary__small-dash {
	bottom 4px

	width  30px
	height 1px
	
	transform-origin 0 0
	transform scaleX(1) translateZ(0)
	transition .45s $ease-out-quart

	.t-link--primary:hover & {
		transform scaleX(1.4) translateZ(0)
	}	
}


.t-link--highlighted {
	
	&:before {
		position absolute 
		content ''
		
		top -2px
		left -7px
		
		height 17px
		width 80%
		
		background rgba($colors["white"],.2);
		
		transform-origin 0 0
		transform scaleX(0) translateZ(0)
		
		transition transform .85s $ease-out-quint
	}
	
	&:hover,
	&.is-active {
		&:before {
			transform scaleX(1) translateZ(0)
		}
	}
}

.t-link--line {
	&:after {
		position relative
		content ''
		display inline-block
		
		vertical-align middle
		
		width  50px
		height 2px
		
		margin-left 15px
		
		background $colors["white"];
		
		transform-origin 0 0
		transform scaleX(1) translateZ(0)
		transition .5s $ease-out-quint
	}
	
	&:hover {
		&:after {
			transform scaleX(1.3) translateZ(0)
		}
	}
}

.t-link--line-dark {
	&:after {
		background $colors["brand-dark"];
	}
}


.t-link--tall {
	border-top 1px solid rgba($colors['gray'],.2);

	&:last-child {
		border-bottom 1px solid rgba($colors['gray'],.2);
	}
}

.t-link--tall__ico {
	opacity .3
}

.t-link--scale__media {

	transform scale(1.1) translateZ(0)
	transition 4s cubic-bezier(.165,.84,.44,1)
	
	.t-link--scale:hover & {
		transform scale(1) translateZ(0)
	}
}